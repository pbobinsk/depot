<% if line_item == @current_item %>
  <tr id="current_item">
<% else %>
  <tr>
<% end %>
  <td><%= line_item.quantity %>&times;</td>
  <td><%= line_item.product.title %></td>
  <td class="item_price"><%= number_to_currency(line_item.total_price) %></td>
  <% unless current_page?(new_order_path) %>
    <td><%= button_to '<', decrement_line_item_path(line_item), method: :put, remote: true %></td>
    <td><%= button_to 'x', line_item, method: :delete, remote: true %></td>
    <td><%= button_to '>', increment_line_item_path(line_item), method: :put, remote: true %></td>
  <% end %>
</tr>